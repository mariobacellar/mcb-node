		<form class="form-horizontal" action="/produtos" method="post">
			<div class="form-group col-md-2">
				<label for="inputEstado">Categoria</label>
				<select id="fieldCategoria" name="fieldCategoria" class="form-control">
					<option value="beber">De Beber</option>
					<option value="comer">De Comer</option>
					<option value="vestir">De Vestir</option>
