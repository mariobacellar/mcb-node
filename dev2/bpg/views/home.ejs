		<script type="text/javascript">
		
		var xgpsIni     = document.getElementById("xgpsIni");
		var xgpsTime    = document.getElementById("xgpsTime");
		var idRadarLink = document.getElementById("idRadarLink"); 

		function startLocation(){
		    if (navigator.geolocation) {
		        navigator.geolocation.getCurrentPosition(showPositionIni);
		        navigator.geolocation.watchPosition     (showPositionTime);
		    } else {
		        xgpsIni.innerHTML = "Geolocation is not supported by this browser.";
		    }
		};

		function showPositionIni(position) {
		    xgpsIni.innerHTML = "Current Position..."+position.coords.latitude+","+position.coords.longitude; 

 			var tmp = "?_method=PUT";
 			document.getElementById("idRadarForm").action="/radar/"+position.coords.latitude+"/"+position.coords.longitude+tmp >

			console.log("showPositionIni...");
		};


		function showPositionTime(position) {

			xgpsTime.innerHTML  = "Watch Position..."+position.coords.latitude+","+position.coords.longitude;
			idRadarLink.href 	="/radar/" + position.coords.latitude + "/" + position.coords.longitude;

 			document.getElementById("xlat").textContent = position.coords.latitude;
 			document.getElementById("xlng").textContent = position.coords.longitude;

 			var tmp = "?_method=PUT";
 			document.getElementById("idRadarForm").attributes.action="/radar/"+position.coords.latitude+"/"+position.coords.longitude+tmp >


			console.log("showPositionTime...Watch Position..."+position.coords.latitude+","+position.coords.longitude);
		};

		startLocation();
		</script>>

